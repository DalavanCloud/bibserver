curl -X PUT 'http://localhost:9200/bibserver'

curl -X PUT 'http://localhost:9200/bibserver/record/_mapping' -d '
{
    "record" : {
        "dynamic_templates" : [
            {
                "default" : {
                    "match" : "*",
                    "mapping" : {
                        "type" : "multi_field",
                        "fields" : {
                            "{name}" : {"type" : "{dynamic_type}", "index" : "analyzed", "store" : "yes"},
                            "exact" : {"type" : "{dynamic_type}", "index" : "not_analyzed", "store" : "yes"}
                        }
                    }
                }
            }
        ]
    }
}
'
